{
	"$schema": "./node_modules/@angular/cli/lib/config/schema.json",
	"version": 1,
	"newProjectRoot": "projects",
	"projects": {
		"front-components": {
			"projectType": "library",
			"schematics": {
				"@schematics/angular:component": {
					"standalone": true,
					"style": "scss",
					"changeDetection": "OnPush"
				}
			},
			"root": "projects/front-components",
			"sourceRoot": "projects/front-components/src",
			"prefix": "ss-lib",
			"architect": {
				"build": {
					"builder": "@angular/build:ng-packagr",
					"options": {
						"project": "projects/front-components/ng-package.json"
					},
					"configurations": {
						"production": {
							"tsConfig": "projects/front-components/tsconfig.lib.prod.json"
						},
						"development": {
							"tsConfig": "projects/front-components/tsconfig.lib.json"
						}
					},
					"defaultConfiguration": "production"
				},
				"test": {
					"builder": "@angular-devkit/build-angular:karma",
					"options": {
						"tsConfig": "projects/front-components/tsconfig.spec.json",
						"polyfills": ["zone.js", "zone.js/testing"]
					}
				},
				"lint": {
					"builder": "@angular-eslint/builder:lint",
					"options": {
						"lintFilePatterns": [
							"projects/front-components/**/*.ts",
							"projects/front-components/**/*.html"
						]
					}
				},
				"storybook": {
					"builder": "@storybook/angular:start-storybook",
					"options": {
						"configDir": "projects/front-components/.storybook",
						"browserTarget": "front-components:build",
						"compodoc": true,
						"compodocArgs": [
							"-e",
							"json",
							"-d",
							"projects/front-components"
						],
						"port": 6006,
						"styles": [
							"projects/front-components/src/lib/shared/styles/_variables/_brand.scss",
							"projects/front-components/src/lib/shared/styles/_variables/_alias.scss",
							"projects/front-components/src/lib/shared/styles/custom-variables.scss",
							"projects/front-components/src/lib/shared/styles/mixins/text.scss",
							"projects/front-components/src/lib/shared/styles/overlay.scss"
						]
					}
				},
				"build-storybook": {
					"builder": "@storybook/angular:build-storybook",
					"options": {
						"configDir": "projects/front-components/.storybook",
						"browserTarget": "front-components:build",
						"compodoc": true,
						"compodocArgs": [
							"-e",
							"json",
							"-d",
							"projects/front-components"
						],
						"outputDir": "dist/storybook/front-components",
						"styles": [
							"projects/front-components/src/lib/shared/styles/_variables/_brand.scss",
							"projects/front-components/src/lib/shared/styles/_variables/_alias.scss",
							"projects/front-components/src/lib/shared/styles/custom-variables.scss",
							"projects/front-components/src/lib/shared/styles/mixins/text.scss",
							"projects/front-components/src/lib/shared/styles/overlay.scss"
						]
					}
				}
			}
		},
		"test-app": {
			"projectType": "application",
			"schematics": {
				"@schematics/angular:component": {
					"standalone": true,
					"style": "scss",
					"changeDetection": "OnPush"
				}
			},
			"root": "projects/test-app",
			"sourceRoot": "projects/test-app/src",
			"prefix": "app",
			"architect": {
				"build": {
					"builder": "@angular-devkit/build-angular:application",
					"options": {
						"outputPath": "dist/test-app",
						"index": "projects/test-app/src/index.html",
						"browser": "projects/test-app/src/main.ts",
						"polyfills": ["zone.js"],
						"tsConfig": "projects/test-app/tsconfig.app.json",
						"inlineStyleLanguage": "scss",
						"assets": [
							{
								"glob": "**/*",
								"input": "projects/test-app/public"
							}
						],
						"styles": [
							"projects/test-app/src/styles.scss",
							"projects/front-components/src/lib/shared/styles/_variables/_brand.scss",
							"projects/front-components/src/lib/shared/styles/_variables/_alias.scss",
							"projects/front-components/src/lib/shared/styles/custom-variables.scss",
							"projects/front-components/src/lib/shared/styles/mixins/text.scss",
							"projects/front-components/src/lib/shared/styles/overlay.scss"
						],
						"scripts": []
					},
					"configurations": {
						"production": {
							"budgets": [
								{
									"type": "initial",
									"maximumWarning": "500kB",
									"maximumError": "1MB"
								},
								{
									"type": "anyComponentStyle",
									"maximumWarning": "4kB",
									"maximumError": "8kB"
								}
							],
							"outputHashing": "all"
						},
						"development": {
							"optimization": false,
							"extractLicenses": false,
							"sourceMap": true
						}
					},
					"defaultConfiguration": "production"
				},
				"serve": {
					"builder": "@angular-devkit/build-angular:dev-server",
					"configurations": {
						"production": {
							"buildTarget": "test-app:build:production"
						},
						"development": {
							"buildTarget": "test-app:build:development"
						}
					},
					"defaultConfiguration": "development"
				},
				"extract-i18n": {
					"builder": "@angular-devkit/build-angular:extract-i18n"
				},
				"test": {
					"builder": "@angular-devkit/build-angular:karma",
					"options": {
						"polyfills": ["zone.js", "zone.js/testing"],
						"tsConfig": "projects/test-app/tsconfig.spec.json",
						"inlineStyleLanguage": "scss",
						"assets": [
							{
								"glob": "**/*",
								"input": "projects/test-app/public"
							}
						],
						"styles": ["projects/test-app/src/styles.scss"],
						"scripts": []
					}
				},
				"lint": {
					"builder": "@angular-eslint/builder:lint",
					"options": {
						"lintFilePatterns": [
							"projects/test-app/**/*.ts",
							"projects/test-app/**/*.html"
						]
					}
				}
			}
		}
	},
	"cli": {
		"analytics": false
	}
}
